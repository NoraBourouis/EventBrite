<div class="container-fluid">
        <!-- Example row of columns -->
  <div class="row" id="card">
   <% Event.all.each do |event|  %>
    <div class="col-md-3 col-sm-6">
      <div class="card mb-3 text-center" style="width: 18rem;">
        <h3 class="card-header"><%= event.title %></h3>
        <img style="height: 200px; width: 100%; display: block;" src="<%= image_url("event2.jpg")%>" alt="Card image">
        <a href="<%= event_path(event.id)%>" class="btn card-btn">En Savoir plus</a>
        <div class="card-body">
          <p class="card-text"><%= event.description %>.</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><img class="logo-card" url="assets/images/position.svg"/> <%= event.location %></li>
          <li class="list-group-item">Prix:<%= event.price %>â‚¬</li>
        </ul>  
        <div class="card-footer text-muted text-center card-subtitle"> Date:<%= event.start_date%></div>   
      </div>
    </div>
       <% end %>
    </div>
  </div>
