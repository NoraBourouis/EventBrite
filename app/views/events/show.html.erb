<section id="post-your-event-tabs">
  <h1 class="section-title text-center">Details de l'événement</h1>
  <div class="container">
        <!-- Example row of columns -->
  <br>
        <table class="table">
        <thead>
          <tr>
            <th scope="col">titre</th>
            <th scope="col">description</th>
            <th scope="col">lieu</th>
            <th scope="col">prix</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
      <tbody>
          <tr>
            <td scope="row"><%= @event.title %></td>
            <td><%= @event.description %></td>
            <td><%= @event.location %></td>
            <td><%= @event.price %> €</td>
            <td><%= @event.start_date%></td>
          </tr>
  </tbody>
  </table>
   <hr/>
  <br/>
     <h2 class="text-center"> A propos de l'event</h2>
  <br/>
  <div class="container text-center">
          <div class="row">
            <div class="col-md-4 ">
              <h4> Contacter le créateur de l'événement :</h4>
              <em><%= User.find(@admin).email%></em>
  
            </div> 
              <div class ="col-md-4">
               <h4> Nombre de participants : <%= @attendance.count%> </h4>
                    <% if current_user != User.find(@admin) %>
                      <a class="btn btn-primary btn-md" href=" <%= new_event_participation_path(@event.id) %>" role="button">Rejoindre l'événement »</a>
                   <% end %>
              </div>
            <% if current_user == User.find(@admin) %>
              <div class ="col-md-4">
                <a class="btn btn-primary btn-md" href=" <%= event_participations_path(@event.id) %>" role="button"> Mon espace événement »</a>
              </div>
            <% end %>
          </div>
  </div>

<!-- /container -->
</section>
