<div class="jumbotron text-center">
 <div class="container">
    <h3 class= "display-3 jumbotron-heading">Détails sur l'évent</h3>
    <%if @event.event_picture.attached?%>
    <%= image_tag @event.event_picture, alt: 'event_picture', style:'width:80%;' %>
     <% if current_user == User.find(@admin) %>
      <h4>Changer d'image?</h4>
      <%= form_tag event_event_pictures_path(@event), multipart: true do %>
      <%= file_field_tag :event_picture %>
      <%= submit_tag "mettre à jour" %>
      <%end%>
    <%end%>
    <%else%>
    <p>=== Il n'y a pas encore d'image liée à cet événement ===</p>
      <% if current_user == User.find(@admin) %>
      <h4>Changer d'image?</h4>
      <%= form_tag event_event_pictures_path(@event), multipart: true do%>
      <%= file_field_tag :event_picture %>
      <%= submit_tag "mettre à jour" %>
      <%end%>
      <%end%>
  <%end%>
  </div>
</div>
<section id="post-your-event-tabs">
  <div class="container">
        <!-- Example row of columns -->
  <br>
        <table class="table">
        <thead>
          <tr>
            <th scope="col">titre</th>
            <th scope="col">description</th>
            <th scope="col">lieu</th>
            <th scope="col">prix</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
      <tbody>
          <tr>
            <td scope="row"><%= @event.title %></td>
            <td><%= @event.description %></td>
            <td><%= @event.location %></td>
            <td><%= @event.price %> €</td>
            <td><%= @event.start_date%></td>
          </tr>
  </tbody>
  </table>
   <hr/>
   <br/>
  <div class="container text-center">
          <div class="row">
            <div class="col-md-4 ">
              <h4> Contacter le créateur de l'événement :</h4>
              <em><%= User.find(@admin).email%></em>
  
            </div> 
              <div class ="col-md-4">
               <h4> Nombre de participants : <%= @attendance.count%> </h4>
                    <% if current_user == User.find(@admin) %>
                     <% elsif @attendee.include? current_user %>
                     <%else%>
                      <a class="btn btn-primary btn-md" href=" <%= new_event_participation_path(@event.id) %>" role="button">Rejoindre l'événement »</a>
                   <% end %>
              </div>
            <% if current_user == User.find(@admin) %>
              <div class ="col-md-4">
                <a class="btn btn-primary btn-md" href=" <%= event_participations_path(@event.id) %>" role="button"> Mon espace événement »</a>
              </div>
            <% end %>
          </div>
  </div>

<!-- /container -->
</section>
