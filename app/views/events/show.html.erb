<section id="post-your-event-tabs">
  <h1 class="section-title text-center">Details de l'événement</h1>
  <div class="container">
        <!-- Example row of columns -->
        <div class="row">
          <div class="col-md-6">
            <h2> Nom de l'évent : <%= @event.title %></h2>
            <p> Description : <%= @event.description %> </p>
            <p> Lieu : <%=@event.location%></p>
            <p> Prix : <%= @event.price %> €</p>
            <p> Début : <%= @event.start_date%>, fin: <%=@end_date%> <p> 
          </div>
          <div class="col-md-4">
          <h2> A propos de l'event</h2>
          <p> Contacter le créateur de l'événement <%= User.find(@admin).email%> </p>
          <p> Nombre de participants : <%= @attendance.count%> </p>
          </div>
        </div>
     <% if current_user != @event.admin_id && @attendance.where.not(user_id: current_user) %>
        <div class ="col-md-2">
          <a class="btn btn-primary btn-lg" href=" <%= new_event_participation_path(@event.id) %>" role="button">Rejoindre l'événement »</a></p>
        </div>
      <% end %>
 </div> <!-- /container -->
</section>
