 <div class="container">
        <!-- Example row of columns -->
   <h2>Voilà les participants à ton event:</h2>
  <br>
        <table class="table">
        <thead>
          <tr>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
      <tbody>
      <% @attendance.each do |attendance|  %>
          <tr>
            <td scope="row"><%= attendance.user.first_name%></td>
            <td><%= attendance.user.last_name %></td>
            <td><%= attendance.user.email%></td>
          </tr>
        <%end%>
  </tbody>
  </table>
  <a class="btn btn-secondary btn-lg" href="<%= edit_event_path(@event)%>">Edition de mon événement</a>
  <%= link_to "Suppression de mon événement", @event, data: {:confirm => 't es sûr de toi la??'} , :method => :delete, class: "btn btn-secondary btn-lg"%>
</div> <!-- /container -->