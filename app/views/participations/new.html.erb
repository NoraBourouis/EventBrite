<h1>Participations#new</h1>
<p>Find me in app/views/participations/new.html.erb</p>

<%= form_tag url_for(action: 'create'), method: "patch" do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <p> Pour rejoindre l'event, veuillez payer : <p>
      <p><%= @event.price%> € </p>
    </label>
  </article>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Rejoignez l'événement"
          data-amount="<%= @event.price.to_f * 100 %>"
          data-currency= "eur"
          data-locale="auto"></script>
<% end %>